<Window x:Class="H12Oef3Medewerkers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H12Oef3Medewerkers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10" HorizontalAlignment="Center">
                <Label Content="Salaris" Margin="10"/>
                <TextBox x:Name="salaryTextBox" Width="150" Margin="10"/>
                <Button x:Name="updateSalaryButton" Width="100" Margin="10" Content="Update" Click="updateSalaryButton_Click"/>
            </WrapPanel>
            <ListBox x:Name="summaryListBox" Margin="10" HorizontalAlignment="Center" Width="250" Height="300" SelectionChanged="ListBox_SelectionChanged"/>
            <Label x:Name="errorLabel" Width="250" Height="30" HorizontalAlignment="Left" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
